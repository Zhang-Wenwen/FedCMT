{
  "format_version": 2,
  "min_clients": 1,
  "num_rounds": 500,

  "server": {
    "heart_beat_timeout": 600
  },

  "task_data_filters": [],
  "task_result_filters": [],

  "components": [
    {
      "id": "persistor",
      "name": "PTFileModelPersistor",
      "args": {
        "model": "model",
        "source_ckpt_file_full_name": null
      }
    },
    {
      "id": "model",
      "path": "dynunet.create_sever_function",
      "args": {
        "mod_channel_mr": 4,
        "mod_channel_ct": 1,
        "in_channels": 32,
        "out_channels": 16
      }
    },
    {
      "id": "shareable_generator",
      "path": "CustomShareableGenerator.CustomizedShareableGenerator",
      "args": {
        "device": "cpu",
        "source_model": "model",
        "optimizer_args": {
          "path": "torch.optim.SGD",
          "args": {
            "lr": 1.0,
            "momentum": 0.6
          },
          "config_type": "dict"
        },
        "lr_scheduler_args": {
          "path": "torch.optim.lr_scheduler.CosineAnnealingLR",
          "args": {
            "T_max": "{num_rounds}",
            "eta_min": 0.9
          },
          "config_type": "dict"
        }
      }
    },
    {
      "id": "aggregator",
      "path":"CustomAggregator.CustomizedAggregator",
      "args": {
        "exclude_vars": null,
        "aggregation_weights": {
          "client1": 1.0
        },
        "expected_data_kind": "WEIGHT_DIFF"
      }
    },
    {
      "id": "model_selector",
      "name": "IntimeModelSelector",
      "args": {
        "weigh_by_local_iter": false,
        "aggregation_weights": {
          "client1": 1.0
        }
      }
    }
  ],

  "workflows": [
    {
      "id": "scatter_and_gather",
      "name": "ScatterAndGather",
      "args": {
        "min_clients": "{min_clients}",
        "num_rounds": "{num_rounds}",
        "start_round": 0,
        "wait_time_after_min_received": 1,
        "aggregator_id": "aggregator",
        "persistor_id": "persistor",
        "shareable_generator_id": "shareable_generator",
        "train_task_name": "train",
        "train_timeout": 0,
        "task_check_period": 1
      }
    },
    {
      "id": "cross_site_model_eval",
      "name": "CrossSiteModelEval",
      "args": {
        "model_locator_id": "model_locator",
        "formatter_id": "formatter",
        "submit_model_timeout": 6000,
        "validation_timeout": 6000,
        "cleanup_models": true
      }
    }
  ]
}
